---
layout: default
templateEngineOverride: njk, md
permalink: "/{{ page.date | slugDate }}/{{ page.fileSlug }}/index.html"
tags: "post"
---
<section>
  <hgroup class="mb-8 text-center">
    <h1 class="heading leading-tight mb-2">{{ title }}</h1>
    <p class="text-gray-600">
      <span class="mx-1">
        Written {{ page.date | readableDate }}.
      <span class="mx-1">
        {{ tags | tagList | safe }}
      </span>
    </p>
  </hgroup>
  <div>
    {{ content | safe }}
 </div>
</section>

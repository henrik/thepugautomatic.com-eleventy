---
layout: default
templateEngineOverride: njk, md
permalink: "/{{ page.date | slugDate }}/{{ page.fileSlug }}/index.html"
tags: "post"
---
<section>
  <time value="{{ item.date }}" class="text-gray-600">{{ page.date | readableDate }}</time>
  <h1 class="heading">{{ title }}</h1>
  <div class="mb-4 text-lg font-medium">
    {{ content | section | safe }}
  </div>
  <div>
    {{ content | section('remainder') | safe }}
  </div>
</section>

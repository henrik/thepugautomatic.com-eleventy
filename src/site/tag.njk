---
layout: default
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
  - all
  - posts
permalink: /tag/{{ tag | slug }}/
renderData:
  title: "{{ tag }}"
---

<h1 class="heading text-center">{{ tag }}</h1>

<ol>
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  {% include 'components/post-listing.njk' %}
{% endfor %}
</ol>
